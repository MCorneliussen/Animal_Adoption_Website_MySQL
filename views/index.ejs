<!DOCTYPE html>
<html>

<head>
  <title>
    DAB - Adopt Animal
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container-fluid mt-5 text-center">

    <%- include('./partials/navbar.ejs', {user: user}) %>
      <h1>
        DAB - Adopt an Animal Course Assignment
      </h1>
      <h2>Welcome to the course assignment for DAB</h2>
      <div>
        <img src="/img/home.png" alt="">
      </div>
      <div>
        <button class="btn-lg btn-info" onclick="populateDatabase()">Populate Database</button>
      </div>
  </div>
</body>

<script>
  function populateDatabase() {
    // send post req to the server side endpoint
    fetch('/populate-database', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(response => response.json()) //Parse json response
    .then(data => alert(data.message)) //show success msg
    .catch( error => console.error('error:', error)); //error handler
  }
</script>

</html>